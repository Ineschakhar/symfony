{% extends 'base.html.twig' %}

{% block title %}Comission index{% endblock %}

{% block body %}
    <h1>Comission index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comission in comissions %}
            <tr>
                <td>{{ comission.id }}</td>
                <td>{{ comission.montant }}</td>
                <td>{{ comission.date ? comission.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('comission_show', {'id': comission.id}) }}">show</a>
                    <a href="{{ path('comission_edit', {'id': comission.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comission_new') }}">Create new</a>
{% endblock %}
